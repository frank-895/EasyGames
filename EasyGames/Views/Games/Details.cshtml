@model EasyGames.Models.Game

@{
    ViewData["Title"] = "Details";
}

<div class="entity-card">
    <div class="entity-card__header">
        <h1 class="entity-title">@Model.Title</h1>
        @if (!string.IsNullOrEmpty(Model.Platform))
        {
            <p class="entity-subtitle">@Model.Platform</p>
        }
    </div>
    <div class="entity-card__body">
        <div class="entity-detail">
            <div class="entity-media">
                <img class="entity-img" alt="@Model.Title" src="@(string.IsNullOrWhiteSpace(Model.ImageUrl) ? Url.Content("~/images/placeholder.svg") : Model.ImageUrl)" />
            </div>
            <div>
                <dl class="entity-meta">
                    <dt>Title</dt>
                    <dd>@Model.Title</dd>

                    <dt>Platform</dt>
                    <dd>@Model.Platform</dd>

                    <dt>Age Rating</dt>
                    <dd>@Model.AgeRating</dd>

                    <dt>Price</dt>
                    <dd>@Model.Price.ToString("C")</dd>

                    <dt>Stock</dt>
                    <dd>@Model.StockQuantity</dd>
                </dl>
                <div class="entity-actions mt-3">
                    @if (User.IsInRole("Admin"))
                    {
                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>
                    }
                    @if (User.Identity.IsAuthenticated && !User.IsInRole("Admin") && Model.StockQuantity > 0) // admins are only restricted on frontend for cleanliness (they don't need to purchase from their own store!)
                    {
                        <form asp-controller="Cart" asp-action="AddToCart" method="post" class="d-inline-flex align-items-center me-3">
                            <input type="hidden" name="productId" value="@Model.Id" />
                            <input type="hidden" name="productType" value="Game" />
                            <label for="quantity" class="form-label me-2 mb-0">Quantity:</label>
                            <input type="number" name="quantity" id="quantity" class="form-control me-2" value="1" min="1" max="@Model.StockQuantity" style="width: 80px;" />
                            <button type="submit" class="btn btn-success">Add to Cart</button>
                        </form>
                    }
                    <a class="btn btn-outline-secondary" asp-action="Index">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>
