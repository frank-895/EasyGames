@model IEnumerable<EasyGames.Models.Game>

@{
    ViewData["Title"] = "Games";
}

<h1>Games</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<div class="product-grid">
    @foreach (var game in Model)
    {
        @await Html.PartialAsync("_GameCard", game)
    }
</div>
