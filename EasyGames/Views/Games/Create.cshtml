@model EasyGames.Models.Game

@{
    ViewData["Title"] = "Create";
}

<div class="entity-card">
    <div class="entity-card__header">
        <h1 class="entity-title">Create Game</h1>
    </div>
    <div class="entity-card__body">
        <!-- 
            enctype is needed because we are doing image upload.
            The enctype tells the browser to split the form into separate parts and send files as raw binary data.
            The controller reads the binary stream into a file. 
        -->
        <form asp-action="Create" method="post" enctype="multipart/form-data" class="entity-form">
            <div class="row g-3">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Title" class="form-label"></label>
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Platform" class="form-label"></label>
                        <input asp-for="Platform" class="form-control" />
                        <span asp-validation-for="Platform" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="AgeRating" class="form-label"></label>
                        <input asp-for="AgeRating" class="form-control" />
                        <span asp-validation-for="AgeRating" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label asp-for="Price" class="form-label"></label>
                        <input asp-for="Price" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label asp-for="StockQuantity" class="form-label"></label>
                        <input asp-for="StockQuantity" class="form-control" />
                        <span asp-validation-for="StockQuantity" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-12">
                    <div class="form-group mb-2">
                        <label for="imageFile" class="form-label">Upload Image</label>
                        <input id="imageFile" type="file" name="imageFile" class="form-control" data-val="false" />
                    </div>
                </div>
            </div>
            <div class="entity-actions mt-2">
                <button type="submit" class="btn btn-primary">Create</button>
                <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
