<!-- Partial generated by ChatGPT -->
@model EasyGames.Models.Toy

<div class="product-card">
    @if (User.IsInRole("Admin"))
    {
        <a asp-controller="Toys" asp-action="Delete" asp-route-id="@Model.Id" class="product-card__delete">
            <button type="button" class="product-card__delete-btn" aria-label="Delete">&times;</button>
        </a>
    }
    <div class="product-card__media">
        <img src="@(string.IsNullOrWhiteSpace(Model.ImageUrl) ? Url.Content("~/images/placeholder.svg") : Model.ImageUrl)"
             alt="@Model.Name"
             class="product-card__img" />
    </div>

    <div class="product-card__body">
        <h3 class="product-card__title">@Model.Name</h3>

        @if (!string.IsNullOrEmpty(Model.RecommendedAge))
        {
            <div class="product-card__meta">@Model.RecommendedAge</div>
        }

        @if (!string.IsNullOrEmpty(Model.Material))
        {
            <div class="product-card__meta product-card__meta--muted">@Model.Material</div>
        }

        <div class="product-card__footer">
            <div class="product-card__price">
                @Model.Price.ToString("C")
            </div>
            <div class="product-card__stock">
                <span class="badge bg-secondary">Stock: @Model.StockQuantity</span>
            </div>
        </div>

        <div class="product-card__actions">
            <a asp-controller="Toys" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-sm btn-outline-primary">Details</a>
            @if (User.IsInRole("Admin"))
            {
                <a asp-controller="Toys" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
            }
            @if (User.Identity.IsAuthenticated && !User.IsInRole("Admin") && Model.StockQuantity > 0) // admins are only restricted on frontend for cleanliness (they don't need to purchase from their own store!)
            {
                <form asp-controller="Cart" asp-action="AddToCart" method="post" style="display: inline;">
                    <input type="hidden" name="productId" value="@Model.Id" />
                    <input type="hidden" name="productType" value="Toy" />
                    <input type="hidden" name="quantity" value="1" />
                    <button type="submit" class="btn btn-sm btn-success">Add to Cart</button>
                </form>
            }
        </div>
    </div>
</div>
