<!-- Partial generated by ChatGPT -->
@model EasyGames.Models.Book

<div class="product-card">
    <div class="product-card__media">
        <img src="@(string.IsNullOrWhiteSpace(Model.ImageUrl) ? Url.Content("~/images/placeholder.png") : Model.ImageUrl)"
             alt="@Model.Title"
             class="product-card__img" />
    </div>

    <div class="product-card__body">
        <h3 class="product-card__title">@Model.Title</h3>

        @if (!string.IsNullOrEmpty(Model.Author))
        {
            <div class="product-card__meta">@Model.Author</div>
        }

        @if (!string.IsNullOrEmpty(Model.Genre))
        {
            <div class="product-card__meta product-card__meta--muted">@Model.Genre</div>
        }

        <div class="product-card__footer">
            <div class="product-card__price">
                @Model.Price.ToString("C")
            </div>
            <div class="product-card__stock">
                <span class="badge bg-secondary">Stock: @Model.StockQuantity</span>
            </div>
        </div>

        <div class="product-card__actions">
            <a asp-controller="Books" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-sm btn-outline-primary">Details</a>
            <a asp-controller="Books" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
        </div>
    </div>
</div>
